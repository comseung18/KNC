{
    "author": "comseung18",
    "manifest_version": 3,
    "name": "KoreatechNoticeCheck",
    "short_name": "KNC",
    "version": "1.0.0",
    "description": "Koreatech Notice Check",

    "permissions": [
        "storage", "activeTab", "scripting", "unlimitedStorage"
    ],
    "content_scripts": [{

        "matches": ["https://portal.koreatech.ac.kr/*"],

        "css": [],

        "js": ["content-script.js"]

    }],
    "background": {},

    "action": {
        "default_icon": {
            "16": "/images/get_started16.png",
            "32": "/images/get_started32.png",
            "48": "/images/get_started48.png",
            "128": "/images/get_started128.png"
        }
    },

    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    }
}